      </div>

      <span class="text-xs pt-1.5 ml-3">
        We support Apple iPhone, iWatch and Google Android wallets
      </span>
    </div>
  </div>

  <div class="w-5/12">
    <%= inline_svg_tag "website/red-patch.svg", class: 'some-class' %>
  </div>
</section>

<section class="w-full top-0 z-0">
  <div class="container mx-auto flex">
    <div class="w-7/12">
      &nbsp;
    </div>

    <div class="w-5/12" data-controller="website">
      <div class="relative mt-6 w-fit mx-auto" data-action="mouseup->website#revealUnclick mousemove->website#revealSlide">
        <div class="w-96 mx-auto rounded-lg" data-website-target="revealContainer">
          <!-- component -->
          <div class="flex items-center justify-center">
            <div class="h-[32rem] w-full bg-code-gray shadow-2xl rounded-lg overflow-hidden">
              <div id="header-buttons" class="py-3 px-4 flex">
                <div class="rounded-full w-3 h-3 bg-red-500 mr-2"></div>
                <div class="rounded-full w-3 h-3 bg-yellow-500 mr-2"></div>
                <div class="rounded-full w-3 h-3 bg-green-500"></div>
              </div>
              <div class="py-4 px-8 mt-1 text-white text-xs font-code">
                <code data-website-target="revealCodeContainer"></code>
              </div>
            </div>
          </div>
          <!-- end of code component -->
        </div>
        <%= image_tag "website/Slider-Example@2x.jpg", class: "absolute inset-0 h-[32rem] w-96 mx-auto rounded-lg", style: "clip-path: polygon(0 0, 50% 0, 50% 100%, 0 100%)", data: { "website-target": "revealImage" } %>

        <div class="absolute inset-y-0 rounded-lg" style="left: 50%" data-website-target="revealBorder">
          <div class="relative h-full">
            <div class="absolute inset-y-0 bg-gray-800 w-0.5 -ml-px"></div>
            <button class="h-6 w-6 -ml-3 -mt-6 rounded-full bg-off-black border border-white w-0.5 absolute top-1/2 shadow-2xl" data-action="mousedown->website#revealClick"></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

